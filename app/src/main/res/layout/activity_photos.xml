<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/canvas"
    android:orientation="vertical"
    tools:context=".Photos">

    <RelativeLayout
        android:id="@+id/photos_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/link_back_home4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/red_hat_font_family"
        android:textFontWeight="600"
        android:textSize="22sp"
        android:textColor="@color/dark"
        android:text="News"
        android:gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/red_hat_font_family"
            android:textFontWeight="700"
            android:textSize="28sp"
            android:textColor="@color/dark"
            android:text="News List"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/red_hat_font_family"
            android:textFontWeight="500"
            android:textSize="18sp"
            android:textColor="@color/placeholder"
            android:text="Just bunch of news"/>
    </LinearLayout>

    <ListView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/header_bar_cs_lv"
        android:id="@+id/custom_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/custom_list_view"
        android:dividerHeight="1dp"
        android:divider="@color/placeholder"/>



</LinearLayout>